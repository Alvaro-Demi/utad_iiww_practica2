---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section class="auth">
        <div class="card auth__card">
          <h1 class="auth__title">Iniciar sesión</h1>
          <p class="auth__subtitle">
            Accede a tu cuenta para gestionar tus suscripciones y completar tus compras.
          </p>
    
          <form action="/login" method="post">
            <div class="field">
              <label for="usuario">Email o usuario</label>
              <input
                id="usuario"
                name="usuario"
                type="text"
                placeholder="tuemail@ejemplo.com"
                autocomplete="username"
                required
              />
            </div>
    
            <div class="field" style="margin-top: 16px;">
              <label for="password">Contraseña</label>
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
              />
            </div>
    
            <div style="margin-top: 12px;">
              <label style="display:flex; gap: 10px; align-items:center; color: var(--muted, inherit);">
                <input type="checkbox" name="recordar" />
                Recordarme en este dispositivo
              </label>
            </div>
    
            <div class="auth__actions">
              <button class="btn btn--primary" type="submit">Entrar</button>
              <a class="btn" href="/">Volver a inicio</a>
            </div>
    
            <p class="helper">
              ¿No tienes cuenta? <a href="/registro">Regístrate</a>
            </p>
    
            <p class="helper">
              [Aquí se mostrarían mensajes de error si las credenciales no son correctas.]
            </p>
          </form>
        </div>
      </section>
</Layout>
