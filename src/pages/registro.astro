---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section>
        <h1>Crear cuenta</h1>
        <p>
            Regístrate para poder gestionar tus suscripciones y contratar los
            planes de DevSuite.
        </p>
    </section>

    <section>
        <form action="/registro" method="post">
            <div>
                <label for="nombre">Nombre</label>
                <input
                    type="text"
                    id="nombre"
                    name="nombre"
                    placeholder="Tu nombre"
                    required
                />
            </div>

            <div>
                <label for="email">Correo electronico</label>
                <input
                    type="text"
                    name="email"
                    id="email"
                    placeholder="tuemail@ejemplo.com"
                    required
                />
            </div>

            <div>
                <label for="password">Contraseña</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                />
              </div>
        
              <div>
                <label for="password2">Repetir contraseña</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  required
                />
              </div>
        
              <div>
                <button type="submit">Registrarse</button>
              </div>
            </form>
        
            <p>
              ¿Ya tienes cuenta?
              <a href="/login">Inicia sesión</a>
            </p>
        </form>
    </section>
</Layout>
